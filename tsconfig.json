{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "node",
      "./src/types/vite-env.d.ts"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/assets/*": ["src/assets/*"],
      "@/api/*": ["src/api/*"],
      "@/styles/*": ["src/styles/*"],
      "@/routes/*": ["src/routes/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/utils/*": ["src/utils/*"],
      "@/config/*": ["src/config/*"],
      "@/data/*": ["src/data/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src", "tools", "src/types", "scripts"],
  "exclude": ["node_modules", "dist", "dev-dist", "temp"]
}