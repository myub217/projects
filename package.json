{
  "name": "modular-onepage",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Modular Onepage App built with Vite, React, TailwindCSS, Express, and TypeScript. Fullstack SPA with PWA support and clean modular structure.",
  "author": "myub217 <myub25217@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/myub217/modular-onepage"
  },
  "keywords": [
    "vite",
    "react",
    "tailwindcss",
    "typescript",
    "express",
    "pwa",
    "modular",
    "spa",
    "frontend",
    "backend",
    "fullstack"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start:api": "tsx server.ts",
    "start": "concurrently \"pnpm start:api\" \"pnpm dev\"",
    "preview": "vite preview",
    "start:preview": "concurrently \"pnpm start:api\" \"pnpm preview\"",
    "build": "vite build",
    "analyze": "vite build --plugin rollup-plugin-visualizer",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm typecheck && pnpm lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "clean": "sh ./Clean.sh",
    "prepare": "husky install",
    "upgrade": "ncu -u && pnpm install",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "connect-history-api-fallback": "^2.0.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "daisyui": "^5.0.46",
    "depcheck": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-fetch-mock": "^3.0.3",
    "npm-check-updates": "^18.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "ts-unused-exports": "^11.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "7.0.4",
    "vite-plugin-pwa": "^1.0.0"
  }
}
